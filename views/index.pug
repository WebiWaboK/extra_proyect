extends layout

block content
  h1 Calculadora de IMC
  form(id='bmiForm')
    label(for='weight') Peso (kg):
    input(type='number' name='weight' required)
    br
    label(for='height') Altura (cm):
    input(type='number' name='height' required)
    br
    button(type='submit') Calcular IMC
  #result

  if !user
    #info-message(style="display:none;") Si quieres saber tu Índice de Grasa Corporal o  mas informacion adicional del IMC, <a href='/register'>regístrate</a> o <a href='/login'>inicia sesión</a> si ya tienes cuenta.
    
  canvas#bmiChart(width='600' height='200') // Ajusta el tamaño del canvas aquí

  script(src='https://cdn.jsdelivr.net/npm/chart.js')
  script(src='https://cdn.jsdelivr.net/npm/chartjs-plugin-annotation')
  script(src='/js/chart.js')
